<main id="cardv1">
  <div class="share-card">
    <div class="gradient">
      <div class="grad-and-icons">
        <div class="icons-for-grad">

          <div class="icon-container">
            <div class="icon">
              <i class="fa-regular fa-comment fa-lg" style="color: #ffffff;"></i>
            </div>
            <div class="icon-text">
              <p>100</p>
            </div>
          </div>

          <div class="icon-container">
            <div class="icon">
              <i class="fa-regular fa-star fa-lg" style="color: #ffffff;"></i>
            </div>
            <div class="icon-text">
              <p>100</p>
            </div>
          </div>

          <div class="icon-container">
            <div class="icon">
              <i class="fa-regular fa-bookmark fa-lg" style="color: #ffffff;"></i>
            </div>
            <div class="icon-text">
              <p>100</p>
            </div>
          </div>
        </div>

        <div>
          <%= image_tag 'sky.png', class: "profile-pic" %>
        </div>

        <div class="username-top">
        <p>Username_user</p>
        </div>

        <div>
          <%= image_tag 'fashion.jpeg', class: "card-img" %>
        </div>
      </div>
    </div>
    <div class="card-text">
      <p><strong><%= User.find(post.user_id).user_name %></strong></p>
      <p><%= post.description %></p>
      <p><%= post.category %></p>
      <p><%= post.occasion %></p>
      <p><%= time_ago_in_words(post.created_at) %></p>
    </div>
  </div>
</main>
