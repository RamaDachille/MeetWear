 <div class="cancel-card">
  <%= link_to "", class: "icon-cancel" do %>
    <i class="fa-solid fa-xmark"></i>
  <% end %>
    <p style="color: black">Create post</p>
</div>

<div class="card add-image-card">
  <%= link_to "", class: "icon-add-image" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>

<div class="container">
  <div class="tabs">
    <input type="radio" id="radio-1" name="tabs" checked />
    <label class="tab" for="radio-1">Share your style</label>
    <input type="radio" id="radio-2" name="tabs" />
    <label class="tab" for="radio-2">Ask for feedback</label>
    <span class="glider"></span>
  </div>
</div>




<div>
  <%= simple_form_for @post do |f| %>
      <div class="add-image-card">
        <%= f.input :photo, as: :file %>
      </div>
    <%= f.select :post_type, options_for_select([["Share your style", "Share"], ["Ask for feedback", "Ask"]]) %>
    <%= f.input :description, input_html: { maxlength: 300 } %>
    <%= f.label :occasion, "Occasion"%>
    <%= f.select :occasion, options_for_select([
      ["Party", "Party"],
      ["Business Meeting", "Business Meeting"],
      ["Casual Outing", "Casual Outing"],
      ["Wedding", "Wedding"],
      ["Formal Event", "Formal Event"],
      ["Workout", "Workout"],
      ["Date Night", "Date Night"],
      ["Vacation", "Vacation"],
      ["Interview", "Interview"]
    ]) %>
    <%= f.label :category, "Outfit Category"%>
    <%= f.select :category, options_for_select([
      ["Casual Wear", "Casual Wear"],
      ["Formal Wear", "Formal Wear"],
      ["Street Style", "Street Style"],
      ["Athleisure", "Athleisure"],
      ["Vintage", "Vintage"],
      ["Bohemian", "Bohemian"],
      ["Business Attire", "Business Attire"],
      ["Beachwear", "Beachwear"],
      ["Ethnic Wear", "Ethnic Wear"],
      ["Glamorous", "Glamorous"],
      ["Smart Casual", "Smart Casual"],
      ["Festival", "Festival"]
    ]) %>
    <%= f.input :brand_tag %>
    <%= f.input :size_rating, as: :boolean, label: "Allow feedback on fit" %>
    <%= f.button :submit %>
  <% end %>
</div>
